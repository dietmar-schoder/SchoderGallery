@inject BuilderFactory BuilderFactory
@inject NavigationManager Nav
@inject NavigationService Navigation
@inject IJSRuntime JS

@if (_builder is not null)
{
    <PageTitle>@_pageTitle</PageTitle>

    <div style="width:100vw; height:@_screenHeightPx; display:flex; justify-content:center; align-items:center;">
        <svg width="@_builder.SvgWidth" height="@_builder.SvgHeight">
            @((MarkupString)_svgContent)

            @foreach (var area in _builder.ClickableAreas)
            {
                <rect x="@area.X" y="@area.Y" width="@area.Width" height="@area.Height"
                    fill="transparent" stroke="none"
                    style="cursor:pointer;"
                    @onclick="() => Nav.NavigateTo(area.Page)">
                </rect>
            }
        </svg>
    </div>
}

@code {
    [Parameter] public BuilderType BuilderType { get; set; }

    private string _screenHeightPx = "100vh";
    private IBuilder _builder;
    private string _svgContent;
    private DotNetObjectReference<BuildingRenderer> _dotNetRef;

    private string _pageTitle => 
        $"Schoder Gallery{(BuilderType == BuilderType.Facade ? string.Empty : $" - {Navigation.GetFloor(BuilderType).LiftLabel}")}";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _builder = BuilderFactory.GetBuilder(BuilderType);

            var size = await JS.InvokeAsync<ScreenSize>("getScreenSize");
            _screenHeightPx = $"{size.Height}px";
            _svgContent = _builder.GetSvgContent(size.Width, size.Height);

            StateHasChanged();

            _dotNetRef = DotNetObjectReference.Create(this);
            await JS.InvokeVoidAsync("initResizeHandler", _dotNetRef, _builder.Interval);
        }
    }

    [JSInvokable]
    public async Task OnResize(ScreenSize size)
    {
        _screenHeightPx = $"{size.Height}px";
        _svgContent = _builder.GetSvgContent(size.Width, size.Height);
        await InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        _dotNetRef?.Dispose();
    }
}