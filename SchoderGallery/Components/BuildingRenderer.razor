@using SchoderGallery.Builders
@using SchoderGallery.Navigation
@using SchoderGallery.Settings
@inject BuilderFactory BuilderFactory
@inject NavigationManager Nav
@inject NavigationService Navigation
@inject IJSRuntime JS

@if (Builder is not null)
{
    <PageTitle>@PageTitle</PageTitle>

    <div style="width:100vw; height:@_screenHeightPx; display:flex; justify-content:center; align-items:center;">
        <svg width="@Builder.SvgWidth" height="@Builder.SvgHeight">
            @((MarkupString)SvgContent)

            @foreach (var area in Builder.ClickableAreas)
            {
                <rect x="@area.X" y="@area.Y" width="@area.Width" height="@area.Height"
                    fill="transparent" stroke="none"
                    style="cursor:pointer;"
                    @onclick="() => Nav.NavigateTo(area.Page)">
                </rect>
            }
        </svg>
    </div>
}

@code {
    [Parameter] public BuilderType BuilderType { get; set; }

    private string _screenHeightPx = "100vh";
    private IBuilder Builder;
    private string SvgContent;
    private DotNetObjectReference<BuildingRenderer> _dotNetRef;

    private string PageTitle => 
        $"Schoder Gallery{(BuilderType == BuilderType.Facade ? string.Empty : $" - {Navigation.Floors[BuilderType].LiftLabel}")}";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            Builder = BuilderFactory.GetBuilder(BuilderType);

            var size = await JS.InvokeAsync<ScreenSize>("getScreenSize");
            _screenHeightPx = $"{size.Height}px";
            SvgContent = Builder.GetSvgContent(size.Width, size.Height);

            StateHasChanged();

            _dotNetRef = DotNetObjectReference.Create(this);
            await JS.InvokeVoidAsync("initResizeHandler", _dotNetRef, Builder.Interval);
        }
    }

    [JSInvokable]
    public async Task OnResize(ScreenSize size)
    {
        _screenHeightPx = $"{size.Height}px";
        SvgContent = Builder.GetSvgContent(size.Width, size.Height);
        await InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        _dotNetRef?.Dispose();
    }
}